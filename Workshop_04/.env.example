# E-commerce AI Product Advisor Configuration
# Copy this file to .env and fill in your actual values

# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=ecommerce-products

# Azure OpenAI Configuration
AZURE_OPENAI_API_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-07-01-preview

# Azure OpenAI - Embedding Model
AZURE_OPENAI_EMBEDDING_API_KEY=your_embedding_api_key_here
AZURE_OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Azure OpenAI - LLM Model  
AZURE_OPENAI_LLM_API_KEY=your_llm_api_key_here
AZURE_OPENAI_LLM_MODEL=GPT-4o-mini

# Optional: Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
